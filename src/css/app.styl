}

.pointer-cursor {
  cursor: pointer;
}

.titlebar {
    -webkit-app-region: drag;
    width: 100%;
    height: 20pt;
    background-color: #000;
    top: 0;
    left: 0;
    position: absolute;
}

.q-table thead, .q-table tr, .q-table th, .q-table td {
    border-color: #333333;
}