@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro&display=swap');
@import url('https://fonts.googleapis.com/css?family=Titillium+Web&display=swap');

::-webkit-scrollbar {
    width: 12px;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 20px #161616;
    border-radius: 0px;
}

::-webkit-scrollbar-thumb {
    border-radius: 0px;
    -webkit-box-shadow: inset 0 0 10px #000000;
}

.titilium {
  font-family: 'Titillium Web', sans-serif;
}

.code {
  font-family: 'Source Code Pro', monospace;
}
.blink {
  animation: blinker 1s linear infinite;
}
@keyframes blinker {
  50% {
    opacity: 0;
  }
}

.background-gradient {
  background-image: linear-gradient(to bottom right, #00F7A9, #A000FD);
}

.blur {
  opacity: 0.7;
  -webkit-filter: blur(10px) grayscale(90%);
  -moz-filter: blur(10px) grayscale(90%);
  -o-filter: blur(10px) grayscale(90%);
  -ms-filter: blur(10px) grayscale(90%);
  filter: blur(10px) grayscale(90%);
}

.border-right {
  border-right: 1px solid #CECFD0;
}

// app global css
.bg-vgrey {
  background: #CECFD0;
}
.bg-vpurple {
  background: #A000FD;
}
.bg-vgreen {
  background: #00F7A9;
}
.bg-vdark {
  background: #1F1F1F;
}
.bg-vdarker {
  background: #161616;
}
.bg-vblack {
  background: #000;
}

.text-vgrey {
  color: #CECFD0;
}
.text-vpurple {
  color: #A000FD !important;
}
.text-vgreen {
  color: #00F7A9 !important;
}
.text-vdark {
  color: #1F1F1F !important;
}
.text-vblack {
  color: #000 !important;
}

.pointer-cursor {
  cursor: pointer;
}